[Unit]
Description=bitsongcli
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
User=bitsongd
Group=bitsongd
PermissionsStartOnly=true
ExecStart=/usr/bin/bitsongcli rest-server --laddr {{bitsongcli_ADDRESS}}
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target

